extends layout

block title
	| Player List

block content
	div(class='container')
		if query.type == 'goalkeepers'
			h1(class='display-3')= "Draw 1 - Goalkeepers (Base Price $5)"
			div(class='row')
				each player in goalkeepers
					include ./players/card.pug
		
		if query.type == 'defenders_5'
			h1(class='display-3')= "Draw 5 - Defenders (Base Price $5)"
			div(class='row')
				each player in defenders_5
					include ./players/card.pug
		
